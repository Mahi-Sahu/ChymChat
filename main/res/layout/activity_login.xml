<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CBF4F0"
    android:clipChildren="false"
    android:clipToPadding="false"
    tools:context=".Login">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="350sp"
        android:layout_height="750sp"
        android:layout_marginStart="100sp"
        android:layout_marginBottom="44sp"
        android:background="#CBF4F0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/splashscreenside" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="@dimen/_95sdp"
        android:layout_height="@dimen/_95sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.851"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.832"
        app:srcCompat="@drawable/closed_eyes_kawai" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_1sdp"
        app:cardBackgroundColor="#56000000"
        app:cardCornerRadius="@dimen/_3sdp"
        app:cardElevation="@dimen/_4sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/rectangleblock"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/_3sdp"
            android:background="#782B9390" />

        <ImageView
            android:id="@+id/userimage"
            android:layout_width="@dimen/_120sdp"
            android:layout_height="@dimen/_120sdp"
            android:layout_gravity="center|top"
            android:layout_margin="@dimen/_50sdp"
            android:layout_marginTop="@dimen/_100sdp"
            app:srcCompat="@drawable/userimage" />

        <TextView
            android:id="@+id/login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_160sdp"
            android:fontFamily="@font/norican_regular"
            android:gravity="center"
            android:text="Login"
            android:textColor="#021627"
            android:textSize="@dimen/_40sdp" />

        <TextView
            android:id="@+id/signintocontinue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_195sdp"
            android:fontFamily="@font/estonia_regular"
            android:gravity="center"
            android:text="Sign in to continue"
            android:textColor="#021627"
            android:textSize="@dimen/_34sdp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_230sdp"
            android:fontFamily="@font/estonia_regular"
            android:paddingLeft="@dimen/_20sdp"
            android:text="Email"
            android:textColor="#021627"
            android:textSize="@dimen/_30sdp" />

        <EditText
            android:id="@+id/emailAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_260sdp"
            android:ems="10"
            android:fontFamily="@font/alice"
            android:hint="xyz123@gmail.com"
            android:inputType="textEmailAddress"
            android:minHeight="48dp"
            android:paddingLeft="@dimen/_20sdp"
            android:textColor="#021627"
            android:textColorHint="#6D021627"
            android:textSize="@dimen/_13sdp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_290sdp"
            android:fontFamily="@font/estonia_regular"
            android:paddingLeft="@dimen/_20sdp"
            android:text="Password"
            android:textColor="#021627"
            android:textSize="@dimen/_35sdp" />

        <EditText
            android:id="@+id/loginpassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_320sdp"
            android:ems="10"
            android:fontFamily="@font/alice"
            android:hint="Your password here"
            android:inputType="textPassword"
            android:minHeight="48dp"
            android:paddingLeft="@dimen/_20sdp"
            android:textColorHint="#6E021627"
            android:textSize="@dimen/_13sdp" />

        <Button
            android:id="@+id/loginButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|bottom"
            android:layout_marginTop="@dimen/_360sdp"
            android:layout_marginBottom="@dimen/_13sdp"
            android:backgroundTint="#001267"
            android:text="Login"
            android:textColor="@color/white" />

    </androidx.cardview.widget.CardView>

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="@dimen/_106sdp"
        android:layout_height="@dimen/_70sdp"
        android:layout_marginStart="@dimen/_36sdp"
        android:layout_marginTop="@dimen/_100sdp"
        app:layout_constraintStart_toStartOf="@+id/imageView4"
        app:layout_constraintTop_toTopOf="@+id/imageView4"
        app:srcCompat="@drawable/closed_eyes_kawai" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="@dimen/_130sdp"
        android:layout_height="@dimen/_100sdp"
        android:layout_marginTop="616dp"
        android:layout_marginEnd="276dp"
        android:rotation="20"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/redchime" />

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="@dimen/_80sdp"
        android:layout_height="@dimen/_100sdp"
        android:layout_marginTop="628dp"
        android:layout_marginEnd="204dp"
        android:rotation="-20"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/redchime" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_4sdp"
        android:fontFamily="@font/estonia_regular"
        android:gravity="center"
        android:paddingBottom="0dp"
        android:text="Don't have an account?"
        android:textColor="#021627"
        android:textSize="@dimen/_30sdp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView" />

    <TextView
        android:id="@+id/signUp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_6sdp"
        android:fontFamily="@font/estonia_regular"
        android:gravity="center"
        android:text="Sign up"
        android:textColor="#021627"
        android:textSize="@dimen/_20sdp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView2" />

</androidx.constraintlayout.widget.ConstraintLayout>