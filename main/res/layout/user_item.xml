<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/_3sdp"
    android:background="@drawable/border_main">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/userImage_user_item"
            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_60sdp"
            android:layout_gravity="top|right"
            android:layout_margin="@dimen/_4sdp"
            app:srcCompat="@drawable/userimage" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_4sdp"
            android:layout_marginEnd="@dimen/_4sdp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/username_user_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/alice"
                android:text="Name"
                android:textColor="@color/black"
                android:textSize="@dimen/_23sdp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/user_status_user_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/norican_regular"
                android:text="Status"
                android:textColor="#393838"
                android:textSize="@dimen/_15sdp" />

        </LinearLayout>

    </LinearLayout>
</RelativeLayout>